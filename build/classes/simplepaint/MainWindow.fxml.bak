<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml" fx:controller="simplepaint.MainWindowController">
  <children>
    <MenuBar fx:id="menuBar">
      <menus>
        <Menu text="File">
          <items>
            <MenuItem onAction="#handleNewMenu" text="New" />
            <MenuItem onAction="#handleOpenMenu" text="Open" />
            <MenuItem onAction="#handleSaveMenu" text="Save" />
            <SeparatorMenuItem />
          </items>
        </Menu>
        <Menu text="Effect">
          <items>
            <MenuItem onAction="#handleGlowMenu" text="Glow" />
            <MenuItem onAction="#handleSepiaToneMenu" text="SepiaTone" />
            <MenuItem onAction="#handleBoxBlurMenu" text="Box Blur" />
            <MenuItem onAction="#handleBloomMenu" text="Bloom" />
            <MenuItem onAction="#handleDisplacementMapMenu" text="DisplacementMap" />
            <SeparatorMenuItem />
            <MenuItem onAction="#handleUnduMenu" text="Undo" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
      <children>
        <VBox alignment="TOP_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" spacing="5.0" style="-fx-border-style: dotted;-fx-border-color: #67644e;-fx-border-width: 2;" HBox.hgrow="ALWAYS">
          <children>
            <VBox id="HBox" alignment="CENTER" spacing="5.0">
              <fx:define>
                <ToggleGroup fx:id="toolGroup" />
              </fx:define>
              <children>
                <ToggleButton fx:id="btPen" selected="true" text="Pen" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Pencil like" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btEraser" text="Eraser" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Eraser" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btText" text="Text" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Write text" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btLine" text="Line" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Write Line" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btCopy" text="Copy" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Copy" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btCut" text="Cut" toggleGroup="$toolGroup" VBox.vgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Paste" />
                  </tooltip>
                </ToggleButton>
              </children>
            </VBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <fx:define>
                <ToggleGroup fx:id="fillGroup" />
              </fx:define>
              <children>
                <ToggleButton fx:id="btFill" selected="true" text="Fill" toggleGroup="$fillGroup" HBox.hgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Fill object" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btStroke" text="Stroke" toggleGroup="$fillGroup" HBox.hgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Stroke object" />
                  </tooltip>
                </ToggleButton>
              </children>
            </HBox>
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <fx:define>
                <ToggleGroup fx:id="shapeGroup" />
              </fx:define>
              <children>
                <ToggleButton fx:id="btRect" selected="true" text="Rect" toggleGroup="$shapeGroup" HBox.hgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Rectangle brush" />
                  </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="btOval" text="Oval" toggleGroup="$shapeGroup" HBox.hgrow="ALWAYS">
                  <tooltip>
                    <Tooltip text="Oval brush" />
                  </tooltip>
                </ToggleButton>
              </children>
            </HBox>
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <children>
                <Label text="Effect" />
                <ComboBox fx:id="cbEffect">
                  <items>
                    <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Glow" />
                      <String fx:value="BoxBlur" />
                      <String fx:value="Bloom" />
                      <String fx:value="Reflection" />
                      <String fx:value="DropShadow" />
                      <String fx:value="InnerShadow" />
                      <String fx:value="DisplacementMap" />
                    </FXCollections>
                  </items>
                  <tooltip>
                    <Tooltip text="Effect brush" />
                  </tooltip>
                </ComboBox>
              </children>
            </HBox>
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <children>
                <Label text="Size" />
                <Slider fx:id="SizePicker" blockIncrement="0.25" max="20.0" min="0.5" value="2.0">
                  <tooltip>
                    <Tooltip text="Slide to size" />
                  </tooltip>
                </Slider>
              </children>
            </HBox>
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <children>
                <Label text="Color" />
                <ColorPicker fx:id="ColorPicker" styleClass="split-button">
                  <tooltip>
                    <Tooltip text="brush color" />
                  </tooltip>
                </ColorPicker>
              </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <children>
                <Label text="Contrast" />
                <Slider fx:id="GammaPicker" blockIncrement="0.25" max="1.0" min="-1.0" value="0.0">
                  <tooltip>
                    <Tooltip text="Slide to edit constrast" />
                  </tooltip>
                </Slider>
              </children>
            </HBox>
            <HBox alignment="TOP_LEFT" spacing="5.0">
              <children>
                <Label text="brightness" />
                <Slider fx:id="BrightnessPicker" blockIncrement="0.25" max="1.0" min="-1.0" value="0.0">
                  <tooltip>
                    <Tooltip text="slide to edit brightness" />
                  </tooltip>
                </Slider>
              </children>
            </HBox>
          </children>
        </VBox>
        <Pane fx:id="Painter" prefWidth="510.0" style="-fx-background-color:gray;-fx-overflow:scroll;" HBox.hgrow="ALWAYS" />
      </children>
    </HBox>
  </children>
</VBox>
